palette {
  base    = "#191724"
  surface = "#1f1d2e"
  text    = "#e0def4"
  accent  = "#eb6f92"

  top_level_func = brighten(palette.accent, 0.2)

  highlight {
    low  = "#21202e"
    mid  = "#403d52"
    high = "#524f67"

    nested_func     = brighten(palette.highlight.mid, 0.2)
    nested_top_func = darken(palette.accent, 0.2)
  }
}

ansi {
  black = palette.surface
  red   = palette.accent
}
